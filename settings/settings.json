{
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"name": "One Dark italic",
				"scope": [
					"comment",
					"entity.other.attribute-name",
					"keyword",
					"markup.underline.link",
					"storage.modifier",
					"storage.type",
					"string.url",
					"variable.language.super",
					"variable.language.this"
				],
				"settings": {
					"fontStyle": ""
				}
			},
			{
				"name": "One Dark italic reset",
				"scope": [
					"keyword.operator",
					"keyword.other.type",
					"storage.modifier.import",
					"storage.modifier.package",
					"storage.type.built-in",
					"storage.type.function.arrow",
					"storage.type.generic",
					"storage.type.java",
					"storage.type.primitive"
				],
				"settings": {
					"fontStyle": ""
				}
			}
		]
	},
	"workbench.iconTheme": "material-icon-theme",
	"editor.minimap.enabled": false,
	"editor.fontSize": 16,
	"terminal.integrated.fontSize": 14,
	"liveServer.settings.donotShowInfoMsg": true,
	"explorer.confirmDragAndDrop": false,
	"hediet.vscode-drawio.resizeImages": null,
	"workbench.tree.enableStickyScroll": false,
	"editor.stickyScroll.enabled": false,
	"gitlens.gitCommands.skipConfirmations": [
		"fetch:command",
		"stash-push:command",
		"switch:command"
	],
	"hediet.vscode-drawio.theme": "atlas",
	"diffEditor.ignoreTrimWhitespace": true,
	"editor.fontFamily": "'0xProto', monospace",
	"editor.fontLigatures": false,
	"terminal.integrated.fontFamily": "'SF Mono Powerline', monospace",
	"workbench.colorCustomizations": {
		"[Shades of Purple (Super Dark)]": {
			"statusBar.background": "#f5d20f",
			"statusBar.foreground": "#2b211b",
		},
	},
	"workbench.productIconTheme": "bongocat",
	// Enable this when using FlatConfig(eslint.config.json).
	"eslint.useFlatConfig": true,
	// vim settings
	"vim.easymotion": true,
	"vim.incsearch": true,
	"vim.useSystemClipboard": true,
	"vim.useCtrlKeys": true,
	"vim.hlsearch": true,
	"vim.insertModeKeyBindings": [
		{
			"before": [
				"j",
				"j"
			],
			"after": [
				"<Esc>"
			]
		},
	],
	"vim.insertModeKeyBindingsNonRecursive": [
		{
			"before": [
				"<C-h>"
			],
			"commands": [
				"cursorLeft"
			]
		},
		{
			"before": [
				"<C-l>"
			],
			"commands": [
				"cursorRight"
			]
		},
		{
			"before": [
				"<C-j>"
			],
			"commands": [
				"cursorDown"
			]
		},
		{
			"before": [
				"<C-k>"
			],
			"commands": [
				"cursorUp"
			]
		},
		{
			"before": [
				"-",
				"-"
			],
			"after": [
				"-",
				">"
			],
			"filetypes": [
				"php"
			]
		},
		// {
		//     "before": [".", ".", "."],
		//     "after": ["..."],
		//     "filetypes": ["php"]
		// }
	],
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": [
				"<leader>",
				"d"
			],
			"after": [
				"d",
				"d"
			]
		},
		{
			"before": [
				"<C-n>"
			],
			"commands": [
				":nohl"
			]
		},
		{
			"before": [
				"K"
			],
			"commands": [
				"lineBreakInsert"
			],
			"silent": true
		},
		{
			"before": [
				"<C-h>"
			],
			"commands": [
				"workbench.action.focusLeftGroup"
			],
			"when": "vim.active || vim.mode == 'Normal'"
		},
		{
			"before": [
				"<C-l>"
			],
			"commands": [
				"workbench.action.focusRightGroup"
			],
			"when": "vim.active || vim.mode == 'Normal'"
		},
	],
	"vim.leader": "<space>",
	"vim.handleKeys": {
		"<C-a>": false,
		"<C-f>": false
	},
	// To improve performance
	"extensions.experimental.affinity": {
		"vscodevim.vim": 1
	},
	"workbench.colorTheme": "Shades of Purple (Super Dark)",
	"github.copilot.enable": {
		"*": true,
		"plaintext": false,
		"markdown": false,
		"scminput": false
	}
}
